{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "src/**",
      "!**/node_modules",
      "!**/.next",
      "!**/public",
      "!**/globals.css",
      "!**/.vscode",
      "!**/.idx",
      "!**/.kiro"
    ]
  },
  "formatter": {
    "enabled": true,
    "includes": ["**"],
    "formatWithErrors": true,
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": "off",
      "suspicious": {
        "noArrayIndexKey": "off"
      }
    },
    "includes": ["**"],
    "domains": {
      "next": "recommended",
      "project": "recommended",
      "react": "recommended",
      "test": "recommended"
    }
  },
  "assist": {
    "enabled": true,
    "includes": ["**"],
    "actions": {
      "recommended": true,
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "linter": {
      "enabled": true
    },
    "parser": {
      "tailwindDirectives": true
    }
  }
}
